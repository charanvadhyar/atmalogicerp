{
  "type": "module",
  "name": "atmalogicerp",
  "version": "0.1.0",
  "private": true,
  "main": "main/main.js",
  "author": "Sai Charan Vadhyar",
  "description": "Electron + NextJS ERP",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": "next build && electron-builder",
    "start": "next start",
    "clean": "rm -rf .next out dist && npm cache clean --force",
    "rebuild": "npm run clean && npm install && npm run dev",
    "lint": "next lint"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "electron-serve": "^2.1.1",
    "geist": "^1.3.1",
    "lucide-react": "^0.474.0",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-variants": "^0.3.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.atmalogic.erp",
    "productName": "AtmaLogic ERP",
    "asar": true,  
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "./node_modules",
        "to": "node_modules"
      }
    ]
    
  }
}
